@model IEnumerable<ProductEdit>
@{
    ViewData["Title"] = "ProductList";
}
@foreach (var i in Model)
{
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-bold mb-6">Product List</h1>
        <div class="overflow-x-auto">

            <table class="min-w-full bg-white dark:bg-gray-800">
                <thead class="bg-gray-50 dark:bg-gray-700">
                    <tr>
                        <th class="py-2 px-4 border-b-2 border-gray-200 dark:border-gray-600">Product ID</th>
                        <th class="py-2 px-4 border-b-2 border-gray-200 dark:border-gray-600">Product Name</th>
                        <th class="py-2 px-4 border-b-2 border-gray-200 dark:border-gray-600">Image</th>
                        <th class="py-2 px-4 border-b-2 border-gray-200 dark:border-gray-600">Opening Quantity</th>
                        <th class="py-2 px-4 border-b-2 border-gray-200 dark:border-gray-600">Description</th>
                        <th class="py-2 px-4 border-b-2 border-gray-200 dark:border-gray-600">Price</th>
                        <th class="py-2 px-4 border-b-2 border-gray-200 dark:border-gray-600">Actions</th>
                    </tr>
                </thead>

                <tbody>

                    <tr>
                        <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-600">@i.ProId</td>
                        <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-600">@i.ProName</td>
                        <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-600">
                            <img src="~/ProductImage/@i.ProImage" alt="Product Image" class="w-10 h-10 object-cover">
                        </td>
                        <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-600">@i.OpeningQuantity</td>
                        <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-600">@i.Description</td>
                        <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-600">$@i.ProPrice</td>
                        <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-600">
                            <button class="text-blue-600 hover:text-blue-900">Edit</button>
                            <button class="text-red-600 hover:text-red-900 ml-2">Delete</button>
                        </td>
                    </tr>

                </tbody>

            </table>

        </div>
    </div>
}