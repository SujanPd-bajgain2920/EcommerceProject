@model Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-md">
    <div class="flex justify-center mb-6">
        <img src="~/ProductImage/@Model.ProImage" alt="Product Image" class="w-32 h-32 rounded-full object-cover border border-gray-200" />
    </div>
    <div class="text-center">
        <h1 class="text-2xl font-bold mb-2">@Model.ProName</h1>
        <p class="text-lg font-semibold text-gray-700 mb-4">@Model.ProPrice</p>
        <p class="text-md text-gray-600 mb-2"><strong>Category:</strong> @Model.Category</p>
        <p class="text-md text-gray-600 mb-6"><strong>Total Quantity:</strong> @Model.OpeningQuantity</p>
    </div>
    <div class="flex justify-center space-x-4 mb-4">
        <a asp-action="Edit" asp-route-id="" class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">Edit Profile</a>
        <a asp-action="Index" class="text-blue-600 hover:underline">Back to Home</a>
    </div>
</div>
