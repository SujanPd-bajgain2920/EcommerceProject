@model IEnumerable<ProductEdit>
@{
    ViewData["Title"] = "Dashboard";
}

<style>
    .main-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin: 20px;
    }

    .main {
        flex: 1 1 300px;
    }
</style>

<div class="main-container">
    @foreach (var p in Model)
    {
        <div class="main flex">
            <div class="bg-white border-gray-200 w-full max-w-sm rounded-lg border shadow dark:bg-gray-800 dark:border-gray-700">
                <div class="px-4 pt-4 flex justify-end">
                    <button id="dropdownButton" data-dropdown-toggle="dropdown-@p.ProId" class="text-gray-500 p-1.5 inline-block rounded-lg text-sm hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-700" type="button">
                        <span class="sr-only">Open dropdown</span>
                        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 3">
                            <path d="M2 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Zm6.041 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM14 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Z" />
                        </svg>
                    </button>

                    <div id="dropdown-@p.ProId" class="bg-white divide-gray-100 w-44 z-10 hidden list-none divide-y rounded-lg text-base shadow dark:bg-gray-700">
                        <ul class="py-2" aria-labelledby="dropdownButton">
                            <li>
                                <a asp-action="Edit" asp-controller="Home" asp-route-id="@p.EncId" class="px-4 py-2 text-gray-700 block text-sm hover:bg-gray-100 dark:text-gray-200 dark:hover:bg-gray-600 dark:hover:text-white">Edit</a>
                            </li>
                            <li>
                                <a class="px-4 py-2 text-red-600 block text-sm hover:bg-gray-100 dark:text-gray-200 dark:hover:bg-gray-600 dark:hover:text-white">Delete</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="pb-10 flex flex-col items-center">
                    <img class="w-24 h-24 mb-3 rounded-full shadow-lg" src="~/ProductImage/@p.ProImage" alt="@p.ProName image" />
                    <h5 class="mb-1 text-gray-900 text-xl font-medium dark:text-white">@p.ProName</h5>
                    <span class="text-gray-500 text-sm dark:text-gray-400">$:@p.ProPrice</span>
                    <div class="mt-4 flex md:mt-6">
                        <a asp-action="Details" asp-controller="Admin" asp-route-id="@p.EncId" class="px-4 py-2 text-white bg-blue-700 inline-flex items-center rounded-lg text-center text-sm font-medium hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Details</a>
                        <a href="#" class="py-2 px-4 ms-2 text-gray-900 bg-white border-gray-200 rounded-lg border text-sm font-medium hover:bg-gray-100 hover:text-blue-700 focus:outline-none focus:z-10 focus:ring-4 focus:ring-gray-100 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:focus:ring-gray-700 dark:hover:text-white dark:hover:bg-gray-700">Message</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Features Section -->
<section class="bg-gray-100 dark:bg-gray-800 py-12">
    <div class="container mx-auto px-6">
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            <div class="bg-white p-6 rounded-lg shadow dark:bg-gray-900">
                <h3 class="text-lg font-semibold text-gray-800 dark:text-white">Manage Products</h3>
                <p class="mt-2 text-gray-600 dark:text-gray-400">Easily add, update, and delete products.</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow dark:bg-gray-900">
                <h3 class="text-lg font-semibold text-gray-800 dark:text-white">Organize Categories</h3>
                <p class="mt-2 text-gray-600 dark:text-gray-400">Keep your products organized with categories.</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow dark:bg-gray-900">
                <h3 class="text-lg font-semibold text-gray-800 dark:text-white">Track Orders</h3>
                <p class="mt-2 text-gray-600 dark:text-gray-400">View and manage customer orders efficiently.</p>
            </div>
        </div>
    </div>
</section>

